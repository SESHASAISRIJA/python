def second_largest_smallest(lst):
    sorted_lst = sorted(set(lst))
    if len(sorted_lst) < 2:
        return None, None
    return sorted_lst[1], sorted_lst[-2]

lst = list(map(int, input("Enter a list of numbers separated by space: ").split()))
second_smallest, second_largest = second_largest_smallest(lst)
print(f"Second smallest: {second_smallest}")
print(f"Second largest: {second_largest}")ï¿¼Enter
